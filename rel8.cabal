cabal-version:       2.0
name:                rel8
version:             1.4.0.0
synopsis:            Hey! Hey! Can u rel8?
license:             BSD3
license-file:        LICENSE
author:              Oliver Charles
maintainer:          ollie@ocharles.org.uk
homepage:            https://github.com/circuithub/rel8
bug-reports:         https://github.com/circuithub/rel8/issues
build-type:          Simple
extra-doc-files:
    README.md
    Changelog.md

source-repository head
    type: git
    location: https://github.com/circuithub/rel8

library
  build-depends:
      aeson
    , base ^>= 4.14 || ^>=4.15 || ^>=4.16
    , bifunctors
    , bytestring
    , case-insensitive
    , comonad
    , contravariant
    , hasql ^>= 1.4.5.1 || ^>= 1.5.0.0 || ^>= 1.6.0.0
    , opaleye ^>= 0.9.3.3
    , pretty
    , profunctors
    , product-profunctors
    , scientific
    , semialign
    , semigroupoids
    , text
    , these
    , time
    , uuid
  default-language:
    Haskell2010
  ghc-options:
    -Werror=missing-methods -Werror=incomplete-patterns -Werror=missing-fields
    -Weverything -Wno-unsafe -Wno-safe -Wno-missing-safe-haskell-mode
    -Wno-missing-import-lists -Wno-prepositive-qualified-module
    -Wno-monomorphism-restriction
    -Wno-missing-local-signatures
    -Wno-missing-kind-signatures
  hs-source-dirs:
    src
  exposed-modules:
    Rel8
