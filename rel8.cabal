      base
    , bytestring
    , case-insensitive
    , containers
    , hasql
    , hasql-transaction
    , hedgehog          ^>= 1.0 || ^>= 1.1
    , mmorph
    , rel8
    , scientific
    , tasty
    , tasty-hedgehog
    , text
    , time
    , tmp-postgres      ^>=1.34.1.0
    , transformers
    , uuid

